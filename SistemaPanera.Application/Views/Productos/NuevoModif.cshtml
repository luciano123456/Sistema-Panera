@{
    ViewData["Title"] = "Home Page";
}


@section Estilos {
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/ProductosNuevoModif.css" rel="stylesheet" />
}


<div class="container-fluid mt-5" style="width: 80vw; margin: 0; padding: 0; position: relative; left: 50%; transform: translateX(-50%);">
    <!-- Datos del Producto -->
    <div class="card w-100" style="border: none;">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Datos del Producto</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <input type="text" class="form-control" id="productoId" hidden>
                <div class="col-12 col-md-4">
                    <label for="unidadNegocio" class="form-label">Unidad de Negocio</label>
                    <select class="input-nuevo-select" id="UnidadesNegocio">
                    </select>
                </div>
                <div class="col-12 col-md-4">
                    <label for="sku" class="form-label">SKU</label>
                    <input type="text" class="input-nuevo" id="sku" placeholder="Código SKU">
                </div>
                <div class="col-12 col-md-4">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <input type="text" class="input-nuevo" id="descripcion" placeholder="Descripción">
                </div>
                <div class="col-12 col-md-6">
                    <label for="categoria" class="form-label">Categoría</label>
                    <select class="input-nuevo-select" id="Categorias">
                    </select>
                </div>
                <div class="col-12 col-md-6">
                    <label for="unidadMedida" class="form-label">Unidad de Medida</label>
                    <select class="input-nuevo-select" id="UnidadMedidas">
                    </select>
                </div>
                <div class="col-12 col-md-4">
                    <label for="costoUnitario" class="form-label">Costo Unitario</label>
                    <input type="text" class="input-nuevo" id="costoUnitario" placeholder="Costo Unitario">
                </div>
                <div class="col-12 col-md-4">
                    <label for="costoInsumos" class="form-label">Costo Insumos</label>
                    <input type="text" class="input-nuevo" id="costoInsumos" placeholder="Costo Insumos" disabled>
                </div>
                <div class="col-12 col-md-4">
                    <label for="costoTotal" class="form-label">Costo Total</label>
                    <input type="text" class="input-nuevo" id="costoTotal" placeholder="Costo Total" disabled>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-lg-10">
            <div class="card" style="width: 80%; position: absolute; left: 9.7vw; border: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Insumos</span>

                    <div class="dropdown">
                    </div>
                </div>
                <div class="card-body">
                    <table class="display nowrap" id="grd_Insumos" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Producto</th>
                                <th>Tipo</th>
                                <th>Cantidad</th>
                                <th>Costo Unitario</th>
                                <th>SubTotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Aquí va el contenido de tu datatable -->
                        </tbody>
                    </table>
                     <div class="d-flex justify-content-end mt-3">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-success" onclick="anadirProducto()">
                                    <i class="fa fa-plus"></i> Añadir
                                </button>
                            </div>
                        </div>
                </div>

                <div class="d-flex justify-content-end mt-2 mb-4">
                    <a class="btn btn-primary btnnuevo" onclick="nuevoProducto()">Registrar</a>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="productosModal" tabindex="-1" role="dialog" aria-labelledby="productosModalLabel" aria-hidden="true" data-editing="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productosModalLabel">Seleccionar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="productoSelect" class="text-black">Producto</label>
                    <select id="productoSelect" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label for="precioInput" class="text-black">Precio</label>
                    <input type="text" id="precioInput" class="form-control" placeholder="Ingrese precio manual" step="0.01">
                </div>
                <div class="form-group">
                    <label for="cantidadInput" class="text-black">Cantidad</label>
                    <input type="number" id="cantidadInput" class="form-control" placeholder="Ingrese cantidad">
                </div>
                <div class="form-group">
                    <label for="totalInput" class="text-black">Total</label>
                    <input type="text" id="totalInput" class="form-control" disabled>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardarProducto" class="btn btn-primary" onclick="guardarProducto()">Añadir Producto</button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

