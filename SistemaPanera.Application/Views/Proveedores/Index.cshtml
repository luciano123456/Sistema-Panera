@{
    ViewData["Title"] = "Home Page";
}


@*GOOGLEAR CARD BOOTSTRAP 5*@
@section Estilos{

    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

    @*ESTILOS DE BOTONES*@
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />

    @*filter columns*@
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/proveedores.css" rel="stylesheet" />


}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-lg-10">
            <div class="card" style="width: 88%; position: absolute; left: 7vw; border: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Proveedores</span>

                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="dropdownColumnas" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu">
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <table class="display nowrap" id="grd_Proveedores" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Apodo</th>
                                <th>Cuit</th>
                                <th>CBU</th>
                                <th>Ubicacion</th>
                                <th>Telefono</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Aquí va el contenido de tu datatable -->
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-2 mb-4">
                    <a class="btn btn-primary btnnuevo" onclick="nuevoProveedor()">Nuevo</a>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">

            <div class="modal-header bg-warning">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Nuevo Proveedor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formProveedor" class="row g-3">

                    <input type="text" class="input-nuevomodif" id="txtId" readonly hidden>

                    <!-- Fila 1 -->
                    <div class="col-md-4">
                        <label id="lblDescripcion" for="txtNombre" class="form-label text-black">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-4">
                        <label id="lblDescripcion" for="txtApodo" class="form-label text-black">Apodo</label>
                        <input type="text" class="form-control" id="txtApodo" required>
                    </div>

                    <div class="col-md-4">
                        <label id="lblDescripcion" for="txtCuit" class="form-label text-black">Cuit</label>
                        <input type="text" class="form-control" id="txtCuit" required>
                    </div>

                    <div class="col-md-4">
                        <label id="lblDescripcion" for="txtCbu" class="form-label text-black">CBU</label>
                        <input type="text" class="form-control" id="txtCbu" required>
                    </div>


                    <div class="col-md-4">
                        <label id="lblDescripcion" for="txtUbicacion" class="form-label text-black">Ubicacion</label>
                        <input type="text" class="form-control" id="txtUbicacion" required>
                    </div>


                    <div class="col-md-4">
                        <label id="lblDescripcion" for="txtTelefono" class="form-label text-black">Telefono</label>
                        <input type="text" class="form-control" id="txtTelefono" required>
                    </div>

                    <!-- Validación -->
                    <div id="errorCampos" class="alert alert-danger d-none">
                        Debes completar los campos obligatorios.
                    </div>
                </form>
            </div>



            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>
                <button type="button" id="btnGuardar" class="btn btn-primary" onclick="guardarCambios()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>

        </div>
    </div>
</div>


<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts{

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    @*SCRIPTS DE BOTONES*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js">
        
    </script><script src="~/js/site.js"></script>

    @*excel*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    @*pdf*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    @*imprimir*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

    @*filter columns*@
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>


    <script src="~/js/Proveedores.js"></script>
   
}